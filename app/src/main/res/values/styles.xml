<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalMaterial</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>
    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="ProgressBarHorizontalMaterial" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!-- Unify (and color-change, tinting is slow) pre-lollipop.
        The material one is an animated vector so it is a no-go -->
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo</item>
    </style>
    <style name="AppTheme.Card">
        <item name="android:background">@drawable/card_background</item>
    </style>
    <style name="AppTheme.AppTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="AppTheme.TextTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:background">@null</item>
        <item name="android:foreground">@null</item>
    </style>
    <style name="AppTheme.TextSubhead" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:background">@null</item>
        <item name="android:foreground">@null</item>
    </style>
    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="closeIcon">@drawable/ic_clear_white</item>
        <item name="searchHintIcon">@drawable/ic_search_hint_over_toolbar</item>
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="voiceIcon">@drawable/ic_voice_search_white</item>
    </style>
</resources>
